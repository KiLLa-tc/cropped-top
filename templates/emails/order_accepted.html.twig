{% extends 'base.html.twig' %}

{% block content %}
<container>
    <row>
    {{order.agent.name}}殿
    </row>
    <row>
    注文を承りました。
    </row>
</container>
<container>
    {{order.title}}
    <container>
        <row><columns>件名</columns><columns>{{ordered.title}}</columns></row>
        <row><columns>注文日</columns><columns>{{ordered.ordered}}</columns></row>
        <row><columns>注文請日</columns><columns>{{ordered.accepted}}</columns></row>
    </container>
    詳細
